<% provide(:title, '情報登録') %>

<div class="col-sm-6 offset-sm-3 mt-4" >
  <%= form_for(@info, url:create_path) do |f| %>

    <div class="form-group">
        <%= f.label :乗車駅 %>
        <%= f.text_field :station1, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :station2 %>
      <%= f.text_field :station2, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :route1 %>
      <%= f.text_field :route1, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :route2%>
      <%= f.text_field :route2, class: 'form-control' %>
    </div>
    <%= f.submit "ボタン", class: "btn btn-primary col-sm-6 offset-sm-3" %>
  <% end %>
</div>
